		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="CommsConsole"]/label</xpath>
				<value>
					<label>pidgeon post</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="CommsConsole"]/graphicData</xpath>
				<value>
					<graphicData>
						<texPath>Outland/Building/Misc/CommsConsole</texPath>
